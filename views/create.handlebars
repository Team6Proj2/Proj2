<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Expense:</h3>
    <form class="form new-expense-form">
      <table>
        <tr>
          <td>Expense Name:</td>
          <td><input id="expense-name" type="text" /></td>
        </tr>
        <tr>
          <td>Merchant:</td>
          <td><input id="expense-merchant" type="text" /></td>
        </tr>
        <tr>
          <td>Date:</td>
          <td><input id="expense-date" type="text" /></td>
        </tr>
        <tr>
          <td>Total (USD):</td>
          <td><input id="expense-total" type="text" /></td>
        </tr>
        <tr>
          <td>Category:</td>
          <td>
            <select name="category" id="expense-category">
              <option value="" selected="selected">Select category</option>
            </select>
          </td>
        </tr>
        <tr>
          <td>Employee Name:</td>
          <td><input id="expense-employee-name" type="text" /></td>
        </tr>
      </table>
    </form>
  </div>
</div>

<script src="/js/create.js"></script>