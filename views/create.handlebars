{{#if logged_in}}
<header>
      <nav class="navbar navbar-light bg-dark d-flex justify-content-between">
          {{! TO DO: user.name does not come through here. }}
          <h3>Welcome {{user.name}}!</h3>
          <div>
            <a href="/" class="btn btn-primary">Home</a>
            <a href="/logout" class="btn btn-danger">Logout</a>
          </div>
      </nav>
</header>

<div class="row mt-4 d-flex justify-content-center">
  <div class="col-md-6">
    <h3>Create a New Expense:</h3>
    <form class="form new-expense-form">
      <table>
        <tr>
          <td>Expense Name:</td>
          <td><input id="expense-name" type="text" /></td>
        </tr>
        <tr>
          <td>Merchant:</td>
          <td><input id="expense-merchant" type="text" /></td>
        </tr>
        <tr>
          <td>Date:</td>
          <td><input id="expense-date" type="date" /></td>
        </tr>
        <tr>
          <td>Total (USD):</td>
          <td><input id="expense-total" type="number" /></td>
        </tr>
        <tr>
          <td>Category:</td>
          <td>
            <select name="category" id="expense-category">
              <option value="" selected="selected">Select Category</option>
            </select>
          </td>
        </tr>
        <tr>
          <td>Employee Name:</td>
          <td>
            <select id="expense-employee-name">
              <option value="" selected="selected">Select Employee</option>
            </select>
        </tr>
      </table>
      <div class="btn-group col-md-12 row justify-content-center">
        <button type="submit" class="btn btn-outline-danger col-sm-3 m-3">Cancel</button>
        <button type="submit" class="btn btn-outline-primary col-sm-3 m-3">Submit</button>
      </div>
    </form>
  </div>
</div>
{{else}}
  <header>
    <nav class="navbar navbar-light bg-dark d-flex justify-content-between">
      <h3>Accountability! ðŸ§®</h3>
      <a href="/login" class="btn btn-primary">Login</a>
    </nav>
  </header>
  <main>
    <h3 class="text-center">Please log in to view this page.</h3>
  </main>
{{/if}}

<script src="/js/create.js"></script>