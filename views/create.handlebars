{{#if logged_in}}
  <header>
    <nav class="navbar navbar-light bg-dark d-flex justify-content-between">
      {{! TO DO: user.name does not come through here. }}
      <h3>Create a New Expense</h3>
      <div>
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/logout" id="logout" class="btn btn-danger">Logout</a>
      </div>
    </nav>
  </header>

  <div class="row mt-4 d-flex justify-content-center">
    <div class="col-md-6">

      <form>
        <div class="form-group">
          <label>Expense Name</label>
          <input type="text" class="form-control" id="expense-description" />
          <small class="form-text text-muted">Enter a short description of your
            expense.</small>
        </div>
        <div class="form-group">
          <label>Merchant</label>
          <input type="text" class="form-control" id="expense-merchant" />
        </div>
        <div class="form-group">
          <label>Date</label>
          <input type="date" class="form-control" id="expense-date" />
        </div>
        <div class="form-group">
          <label>Total (USD)</label>
          <input type="number" class="form-control" id="expense-total" />
        </div>
        <div class="form-group d-flex justify-content-around">
          <label>Category</label>
          <select id="expense-category" name="expense-category">
          </select>
          <label>Employee Name</label>
          <select id="expense-employee-name" name="expense-employee-name">
          </select>
        </div>
        <div class="btn-group dropright col-md-12 row justify-content-center">
          <button
            onclick="window.location.href='/'"
            class="btn btn-outline-danger col-sm-3 m-3"
          >Cancel</button>
          <button
            type="submit"
            class="btn btn-outline-primary col-sm-3 m-3"
            id="add-btn"
          >Submit</button>
        </div>
      </form>
    </div>
  </div>
{{else}}
  <header>
    <nav class="navbar navbar-light bg-dark d-flex justify-content-between">
      <h3>Accountability! ðŸ§®</h3>
      <a href="/login" class="btn btn-primary">Login</a>
    </nav>
  </header>
  <main>
    <h3 class="text-center">Please log in to view this page.</h3>
  </main>
{{/if}}

<script src="/js/create.js"></script>
<script src="/js/dropdowns.js"></script>
{{#if logged_in}}
  <script src="/js/logout.js"></script>
{{/if}}